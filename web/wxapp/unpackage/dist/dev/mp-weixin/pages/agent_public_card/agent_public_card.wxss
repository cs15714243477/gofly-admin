.page{min-height:100vh;background:#f6f7f8}.content{padding:24rpx}.card{position:relative;border-radius:40rpx;overflow:hidden;box-shadow:0 40rpx 80rpx rgba(0,0,0,.18);border:1rpx solid rgba(255,255,255,.08)}.decor-1{position:absolute;top:-80rpx;right:-80rpx;width:256rpx;height:256rpx;border-radius:50%;background:rgba(255,255,255,.08)}.decor-2{position:absolute;bottom:-90rpx;left:-90rpx;width:320rpx;height:320rpx;border-radius:50%;background:rgba(249,115,22,.2)}.inner{position:relative;z-index:2;padding:40rpx;color:#fff}.top-row{display:flex;align-items:center;justify-content:space-between}.store{display:flex;align-items:center;gap:12rpx}.store .store-icon{font-size:34rpx;opacity:.9}.store .store-name{font-size:28rpx;font-weight:800;opacity:.95}.badge{padding:6rpx 16rpx;border-radius:40rpx;display:flex;align-items:center;gap:8rpx;font-size:22rpx;font-weight:800}.badge .badge-icon{font-size:26rpx}.mid{padding:50rpx 0 30rpx;display:flex;flex-direction:column;align-items:center;gap:16rpx}.mid .avatar{width:180rpx;height:180rpx;border-radius:50%;border:6rpx solid rgba(255,255,255,.25);background:rgba(255,255,255,.06)}.mid .name{font-size:44rpx;font-weight:900}.mid .title{font-size:28rpx;font-weight:600;opacity:.86}.bottom{background:rgba(255,255,255,.1);border:1rpx solid rgba(255,255,255,.08);border-radius:28rpx;padding:22rpx}.bottom .line{display:flex;gap:8rpx;line-height:1.5;margin-bottom:12rpx}.bottom .label{font-size:24rpx;opacity:.78}.bottom .val{font-size:26rpx;font-weight:600;opacity:.92}.actions{margin-top:8rpx;display:flex;gap:16rpx}.actions .btn{flex:1;height:84rpx;border-radius:22rpx;display:flex;align-items:center;justify-content:center;gap:10rpx;font-size:30rpx;font-weight:800;border:none}.actions .btn:after{border:none}.actions .primary{background:rgba(255,255,255,.95);color:#0f172a}.actions .ghost{background:rgba(255,255,255,.14);color:#fff}.hint{padding:28rpx 0;text-align:center;color:#64748b;font-size:26rpx}
