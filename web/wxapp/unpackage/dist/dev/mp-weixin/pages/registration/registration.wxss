.register-container {
  height: 100vh;
  background-color: #f6f7f8;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* TopHeader 左侧按钮 */
.th-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  color: #0f172a;
  background: transparent;
}
.th-btn .material-symbols-outlined {
  font-size: 32rpx;
}
.th-btn:active {
  background: rgba(15, 23, 42, 0.06);
}
.body {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.content {
  flex: 1;
  overflow: hidden;
}
.content-inner {
  padding: 20rpx 24rpx 0;
  max-width: 920rpx;
  margin: 0 auto;
  box-sizing: border-box;
}

/* 顶部欢迎卡片：增加留白与层次 */
.header-card {
  position: relative;
  overflow: hidden;
  border-radius: 28rpx;
  padding: 28rpx 26rpx;
  background: linear-gradient(135deg, rgba(45, 156, 240, 0.14) 0%, rgba(37, 99, 235, 0.08) 60%, rgba(249, 115, 22, 0.06) 100%);
  border: 1rpx solid rgba(226, 232, 240, 0.9);
  box-shadow: 0 10rpx 24rpx rgba(15, 23, 42, 0.06);
  margin-bottom: 18rpx;
}
.header-card .header-decor {
  position: absolute;
  right: -60rpx;
  top: -60rpx;
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  background: rgba(45, 156, 240, 0.16);
  filter: blur(30rpx);
}
.header-card .header-main {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  gap: 18rpx;
}
.header-card .brand-icon {
  width: 92rpx;
  height: 92rpx;
  border-radius: 22rpx;
  background: rgba(45, 156, 240, 0.18);
  border: 1rpx solid rgba(45, 156, 240, 0.22);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #2d9cf0;
}
.header-card .brand-icon .material-symbols-outlined {
  font-size: 48rpx;
  font-variation-settings: "FILL" 1;
}
.header-card .title {
  font-size: 40rpx;
  font-weight: 900;
  color: #0f172a;
  line-height: 1.2;
}
.header-card .subtitle {
  font-size: 24rpx;
  color: #64748b;
  margin-top: 6rpx;
  font-weight: 600;
}

/* 表单卡片：让内容“不贴边、不拥挤” */
.form-card {
  background-color: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border-radius: 28rpx;
  border: 1rpx solid rgba(226, 232, 240, 0.9);
  box-shadow: 0 10rpx 24rpx rgba(15, 23, 42, 0.06);
  padding: 22rpx 20rpx;
}
.form .form-item {
  margin-bottom: 18rpx;
}
.form .form-item .label {
  font-size: 26rpx;
  font-weight: 500;
  color: #334155;
  margin-bottom: 10rpx;
  display: block;
}
.form .form-item .label-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}
.form .form-item .label-row .label-tip {
  font-size: 24rpx;
  color: #4b789b;
}
.form .form-item .picker-wrapper {
  display: flex;
  align-items: center;
  gap: 24rpx;
  background-color: #f8fafc;
  padding: 18rpx 24rpx;
  border-radius: 24rpx;
  border: 1px solid rgba(226, 232, 240, 0.95);
  transition: border-color 0.3s;
}
.form .form-item .picker-wrapper .icon-fill {
  color: #2d9cf0;
  font-size: 40rpx;
}
.form .form-item .picker-wrapper .picker-text {
  flex: 1;
  font-size: 32rpx;
  color: #0f172a;
  font-weight: 700;
}
.form .form-item .picker-wrapper .arrow-icon {
  color: #94a3b8;
  font-size: 40rpx;
}
.form .form-item .picker-wrapper:active {
  border-color: #2d9cf0;
}
.form .form-item .input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}
.form .form-item .input-wrapper .input-icon {
  position: absolute;
  left: 32rpx;
  color: #4b789b;
  font-size: 40rpx;
  z-index: 1;
}
.form .form-item .input-wrapper .input {
  width: 100%;
  height: 84rpx;
  background-color: #f8fafc;
  border: 1px solid rgba(226, 232, 240, 0.95);
  border-radius: 24rpx;
  padding-left: 96rpx;
  padding-right: 32rpx;
  font-size: 32rpx;
  color: #0d151c;
  box-sizing: border-box;
}
.form .form-item .input-wrapper .readonly-input {
  pointer-events: none;
}
.form .form-item .input-wrapper .search-icon {
  position: absolute;
  right: 24rpx;
  color: #4b789b;
  font-size: 36rpx;
}
.form .agreement-row {
  margin-top: 20rpx;
  display: flex;
  align-items: flex-start;
}
.form .agreement-row .checkbox-label {
  display: flex;
  align-items: center;
}
.form .agreement-row .agreement-text {
  font-size: 24rpx;
  color: #4b789b;
}
.form .agreement-row .agreement-text .link {
  color: #2d9cf0;
}
.footer {
  padding: 20rpx 32rpx calc(env(safe-area-inset-bottom) + 20rpx);
  border-top: 1rpx solid #f1f1f1;
  background-color: rgba(255, 255, 255, 0.95);
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
}
.footer .register-btn {
  width: 100%;
  height: 88rpx;
  background-color: #2d9cf0;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(45, 156, 240, 0.3);
  border: none;
}
.footer .register-btn::after {
  border: none;
}
.footer .register-btn:active {
  background-color: #1a85d6;
  transform: scale(0.98);
}
.placeholder {
  color: rgba(75, 120, 155, 0.6);
}
.bottom-spacer {
  height: 28rpx;
}