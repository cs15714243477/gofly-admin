}
.filter-bar .filter-item.active {
  background-color: rgba(45, 156, 240, 0.1);
  border-color: rgba(45, 156, 240, 0.2);
}
.filter-bar .filter-item.active .filter-text {
  color: #2d9cf0;
}
.filter-bar .filter-item.active .filter-icon {
  color: #2d9cf0;
}

